extends layout

block content
  .content-container
    form(action="/inventory/game/create" method="POST")
      h1 Create a new game

      .form-input
        label(for="name") Name
        input(type="text", name="name", required=true, placeholder="Runescape, World of Warcraft, Super Mario Odyssey, etc...", minlength=1, maxlength=40 )

      .form-input
        label(for="description") Description
        textarea(type="text", name="description", required=true, placeholder="Brief description of the game", minlength=10, maxlength=800 )

      h2 Categories
        | 
        em (select at least 1)
      div.category-container
        ul.category-scroller
          each category in category_list
            li.category
              a(href=category.url) #{category.name}
      
      .form-input
        label(for="imgUrl") Image URL
        input(type="text", name="imgUrl", required=true, placeholder="https://upload.wikimedia.org/wikipedia/en/thumb/f/f7/RickRoll.png/250px-RickRoll.png")

      if errors  
        ul.error-box
          for error in errors
            li.error-msg #{error.msg}

      button.form-btn-submit(type="submit") Submit
      a.form-btn-cancel(href="/inventory") Cancel